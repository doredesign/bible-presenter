!!! 5
%html{html_attrs}
  %head
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "lang", :content => "en"}
    %title Bible Presenter
    - @additional_css && @additional_css.each do |css_info|
      %link{css_info}
    %link{:href=>'/stylesheets/application.css', :media => "screen", :rel => 'stylesheet', :type => "text/css"}
    %script{:type => "text/javascript", :src => "/javascripts/jquery-3.5.0.min.js"}
    -# %script{:type => "text/javascript", :src => "//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
    %script{:type => "text/javascript", :src => "/javascripts/lodash.min.js"}
    %script{:type => "text/javascript", :src => "/javascripts/presenter_server.js"}
    - @additional_js && @additional_js.each do |js_src|
      %script{:type => "text/javascript", :src => js_src}
  %body
    = yield

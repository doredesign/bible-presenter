%script{:type => "text/javascript", :src => "/javascripts/application.js"}

.row
  .large-12.columns
    %h1{} Welcome to Bible Presenter

%form{id: 'passage_search'}
  .row
    .large-6.small-12.columns
      .row
        .large-12.columns
          %label Bible Passage
          %input{type: 'text', placeholder: 'Jhn 3:16'}
          %input{type: 'submit', value: 'Search', id: 'do_search', class: 'button'}
          %span#colorwheel_container.hidden
            #colorwheel.spinner.colorwheel
              .centerpiece

      .row
        .large-12.columns
          #results
            #text
            %aside.reference
            #copyright_container

    .large-6.small-12.columns
      %h3 Instructions
      %ol
        %li Type in the reference of the passage you would like to display and click 'Search'. A window will pop up to display this passage as a slide.
        %li Drag the slides window to the projector screen.
        %li
          With the slides window selected, type
          %code f
          to display the slide full screen. You may view additional commands by typing
          %code ?
          \.
        %li You can search for additional passages the same way without changing the display of the current slide.
        %li Use the left and right arrows to change slides.

#fums_container